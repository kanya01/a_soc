<div class="bg-white">
  <div class="max-w-2xl mx-auto py-16 px-4 sm:py-24 sm:px-6 lg:max-w-7xl lg:px-8">
    <div class="flex justify-between items-center mb-8">
      <h2 class="text-2xl font-extrabold tracking-tight text-gray-900">Today's Moments</h2>
      <div class="flex space-x-4">
        <button class="text-sm font-medium text-gray-700 hover:text-gray-900">My Friends</button>
        <button class="text-sm font-medium text-gray-500 hover:text-gray-700">Friends of Friends</button>
      </div>
    </div>

    <div class="grid grid-cols-1 gap-y-10 gap-x-6 sm:grid-cols-2 lg:grid-cols-3 xl:gap-x-8">
      <%#= render partial: 'posts/post', collection: @posts %>
      <% @posts.each do |post| %>
      <%= render partial: 'posts/post', locals: { post: post } %>
      <% end %>
    </div>

    <div class="mt-8">
      <%= paginate @posts %>
    </div>
  </div>
</div>
